{    
    "languageserver": {    
        "php": {
           "command": "/iwork/project/.vim/__lsp/psalm/vendor/bin/psalm-language-server",
    "filetypes": ["php"],
    "rootPatterns": ["/iwork/project/.vim/__lsp/psalm/psalm.xml", "/iwork/project/.vim/__lsp/psalm/psalm.xml.dist"],
    "requireRootPattern": true
        },
        "python": {
            "command": "python3",
            "args": [
                "-mpyls",
                "-vv",
                "--log-file",
                "/tmp/lsp_python.log"
            ],
            "trace.server": "verbose",
            "filetypes": ["python"]
        },
        "go": {
            "command": "/root/go/bin/go-langserver",
            "filetypes": ["go"],
            "initializationOptions": {
              "gocodeCompletionEnabled": true,
              "diagnosticsEnabled": true,
              "lintTool": "golint"
            }
        },
        "clangd": {
            "command": "clangd",
            "rootPatterns": ["compile_flags.txt", "compile_commands.json"],
            "filetypes": ["c", "cc", "cpp", "c++", "objc", "objcpp"]
        }
    },
    "diagnostic.displayByAle": true
}
