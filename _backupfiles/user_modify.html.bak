<include file="public/layout" />
<body style="background-color: #FFF; overflow: auto;">
<div id="toolTipLayer" style="position: absolute; z-index: 9999; display: none; visibility: visible; left: 95px; top: 573px;"></div>
<div id="append_parent"></div>
<div id="ajaxwaitid"></div>
<div class="page">
    <div class="fixed-bar">
        <div class="item-title"><a class="back" href="javascript:history.back();" title="返回列表"><i class="fa fa-arrow-circle-o-left"></i></a>
            <div class="subject">
                <h3>会员管理 - 会员修改</h3>
                <h5>网站系统会员管理</h5>
            </div>
        </div>
    </div>
    <form class="form-horizontal" id="delivery-form" method="post">
        <div class="ncap-form-default">
            <dl class="row">
                <dt class="tit">手机号</dt>
                <dd class="opt">
                    <input name="user_id" value="{$user['user_id']}" type="hidden">
                    <input id="mobile" name="mobile" value="{$user['mobile']}" class="input-txt" type="text">
                </dd>
            </dl>
            <dl class="row">
                <dt class="tit">头衔</dt>
                <dd class="opt">
                    <input id="title" name="title" value="{$user['title']}" class="input-txt" type="text">
                </dd>
            </dl>
            <dl class="row">
                <dt class="tit">等级</dt>
                <dd class="opt">
                    <select class="select" name="grade" style="height: 26px;">
                        <for start="0" end="5">
                        <option value="{$i}" <if condition="$i == $user['grade']">selected</if> />V{$i}</option>
                        </for>
                    </select>
                </dd>
            </dl>
            <dl class="row">
                <dt class="tit">星级</dt>
                <dd class="opt">
                    <select class="select" name="grade" style="height: 26px;">
                        <for start="0" end="5">
                        <option value="{$i}" <if condition="$i == $user['stars_grade']">selected</if> />{$i}星</option>
                        </for>
                    </select>
                </dd>
            </dl>
            <div class="bot"><a href="JavaScript:void(0);" onclick="accountForm()" class="ncap-btn-big ncap-btn-green" id="submitBtn">确认提交</a></div>
        </div>
    </form>
</div>
<script type="text/javascript">
    function clearInput(id){
        $('#'+id).val(0);
    }
    function accountForm(){
        $.ajax({
            type:'post',
            data:$('#delivery-form').serialize(),
            url: "{:U('Admin/User/user_modify_update')}",
            dataType:'JSON',
            success: function(data) {
                if(data.status == 1){
                    alert(data.msg);
                    window.location.href=data.url;
                }else{
                    alert(data.msg);
                }
            },
            error:function(){
                alert('网络连接失败，请稍后再试！');
            }
        });
    }
</script>
</body>
</html >
