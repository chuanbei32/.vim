    <script>

        function dopen(title, src, height) {

            if (height == undefined) { height = 500; }

            easyDialog.open({

                container: {

                    header: title,

                    content: '<iframe src="' + src + '" width="100%" height=' + height + 'px  frameborder="no" scrolling="no"></iframe>'

                },

                overlay: false

            });

        }
    </script>
    <script>
        function tick(v) {

